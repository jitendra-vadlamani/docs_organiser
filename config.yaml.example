# Docs Organiser Configuration Example

# Source directory to scan for files
src: "./messy_docs"

# Destination directory for organized files
dst: "./organized_docs"

# MLX Server configuration
api: "http://localhost:8080/v1"
model: "mlx-community/Llama-3.2-1B-Instruct-4bit"

# Technical Limits
ctx: 4096       # Model context window (tokens)
limit: 100000   # Max characters to extract per file

# Performance
workers: 5      # Number of concurrent processing workers
